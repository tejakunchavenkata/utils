#! /bin/tcsh -f
#------------------------------------------------
# Author:    kasula
# Created:   Tue Sep  6 03:28:08 PDT 2011
# File Name: Account
# USAGE: 
# 
# 
# 
#------------------------------------------------Default Values
set MyDir = "~/.MyAccounts"
set Date = `date +%F`
set Types = ('Pay_IN' 'Pay_OUT' 'Transfers(Self)' 'Transfers(3rd-Party)');
#------------------------------------------------1st Arg...
if ( $#argv ) then
        set ARGV1 = $argv[1]
        goto HasARGV1
else
	goto GetARGV1
endif
GetARGV1:
set ARGV1 = '-'`zenity --list --title "Mode" --text "What do you wish to do..." --column '' "Setup" "Add" "Delete" "Record"`
#------------------------------------------------1st Arg Process...
HasARGV1:
set ARGV1 = `echo $ARGV1 | tr 'A-Z' 'a-z'`
switch ( $ARGV1 )
case "-setup":
	if ( ! -e $MyDir ) then
		mkdir -p $MyDir/Books $MyDir/Sources $MyDir/Accounts
		echo '"Title","Balance"'                                 | tee $MyDir/accounts.csv | tee $MyDir/sources.csv > $MyDir/3rd-party.csv
		echo '"Date","Trsc Type","Comment","From","To","Amount"' | tee $MyDir/Books/`date +%Y`_Book.csv > $MyDir/Books/`date +%Y%m`_Book.csv
		find $MyDir -type f -name '*.csv' -exec md5sum '{}' \;  >! $MyDir/.checksum.log
	else
		echo "WARNING : Directory already exists"
	endif
	exit 0
	breaksw
endsw
#------------------------------------------------checksum...
md5sum -c $MyDir/.checksum.log | sed '/OK/d'
if ( $? ) then
	echo "CheckSUM failed due to modification in above files"
	exit 9
endif
#------------------------------------------------Reading Args...
Record:
while ( $#argv > 0 )
        set Option = `echo $1 | tr 'A-Z' 'a-z'`
        shift
        switch ($Option)
        case '-date':
                set Date = `date -d $argv[1] +%F`
                shift
                breaksw
        case '-amount':
                @ Amount = $argv[1]
                shift
                breaksw
        case '-type':
                set Type = $Types[$argv[1]]
                shift
                breaksw
        case '-comment':
                set Comment = "$argv[1]"
                shift
                breaksw
        case '-from':
                set From = $argv[1]
                shift
                breaksw
        case '-to':
                set To = $argv[1]
                shift
                breaksw
        case '-h':
                grep -m 1 -A 3 USAGE $0
                exit
                breaksw
        default:
                echo "Invalid Option found...\nTry '-h' to know valid options\n"
                exit
                breaksw
        endsw
end
#------------------------------------------------Validating data...
if ( ! $?Amount  ) @   Amount  = `zenity --entry --title "Amount"  --text "Please enter an AMOUNT..."`
if ( ! $?Comment ) set Comment = `zenity --entry --title "Comment" --text "Please COMMENT on transaction..."`
if ( ! $?Type    ) set Type    = `zenity --list  --title "Types"   --text "Please select one of the TYPES" --column "Types" $Types`
#switch ( $Type )
#case "$Types[1]":
set From = From
set To = To
#------------------------------------------------Pre Process...
#if (-e -f ~/)
#------------------------------------------------Confirm what is being recorded...
zenity --question --title "Confirm" --text "Date\t\t$Date\nAmount\t$Amount\nType\t\t$Type\nComment\t$Comment\nFrom\t\t$From\nTo\t\t$To" >&! /dev/null
if ( $? ) then
        echo "Cancelled"
else
        echo "Recorded"
endif
